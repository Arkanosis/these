author = {H{\'{e}}ry-Arnaud, G. and Nowak, E. and Caillon, J. and David, V. and Dirou, A. and Revert, K. and Munck, M.-R. and Frachon, I. and Haloun, A. and Horeau-Langlard, D. and {Le Bihan}, J. and Danner-Boucher, I. and Ramel, S. and Pelletier, M.-P. and Rosec, S. and Gouriou, S. and Poulhazan, E. and Payan, C. and F{\'{e}}rec, C. and Rault, G. and {Le Gal}, G. and {Le Berre}, R.},
