@article{Bernarde2015,
abstract = {BACKGROUND: Airway microbiota composition has been clearly correlated with many pulmonary diseases, and notably with cystic fibrosis (CF), an autosomal genetic disorder caused by mutation in the CF transmembrane conductance regulator (CFTR). Recently, a new molecule, ivacaftor, has been shown to re-establish the functionality of the G551D-mutated CFTR, allowing significant improvement in lung function.$\backslash$n$\backslash$nOBJECTIVE AND METHODS: The purpose of this study was to follow the evolution of the airway microbiota in CF patients treated with ivacaftor, using quantitative PCR and pyrosequencing of 16S rRNA amplicons, in order to identify quantitative and qualitative changes in bacterial communities. Three G551D children were followed up longitudinally over a mean period of more than one year covering several months before and after initiation of ivacaftor treatment.$\backslash$n$\backslash$nRESULTS: 129 operational taxonomy units (OTUs), representing 64 genera, were identified. There was no significant difference in total bacterial load before and after treatment. Comparison of global community composition found no significant changes in microbiota. Two OTUs, however, showed contrasting dynamics: after initiation of ivacaftor, the relative abundance of the anaerobe Porphyromonas 1 increased (p{\textless}0.01) and that of Streptococcus 1 (S. mitis group) decreased (p{\textless}0.05), possibly in relation to the anti-Gram-positive properties of ivacaftor. The anaerobe Prevotella 2 correlated positively with the pulmonary function test FEV-1 (r=0.73, p{\textless}0.05). The study confirmed the presumed positive role of anaerobes in lung function.$\backslash$n$\backslash$nCONCLUSION: Several airway microbiota components, notably anaerobes (obligate or facultative anaerobes), could be valuable biomarkers of lung function improvement under ivacaftor, and could shed light on the pathophysiology of lung disease in CF patients.},
author = {Bernarde, C{\'{e}}dric and Keravec, Marl{\`{e}}ne and Mounier, J{\'{e}}r{\^{o}}me and Gouriou, St{\'{e}}phanie and Rault, Gilles and F{\'{e}}rec, Claude and Barbier, Georges and H{\'{e}}ry-Arnaud, Genevi{\`{e}}ve},
doi = {10.1371/journal.pone.0124124},
