pmid = {26140078},
publisher = {World Allergy Organization},
title = {{The microbiome of the human lower airways: a next generation sequencing perspective.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/26140078 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4468963},
volume = {8},
