journal = {American Journal of Respiratory and Critical Care Medicine},
month = {may},
number = {9},
pages = {995--1001},
pmid = {18263800},
title = {{Detection of Anaerobic Bacteria in High Numbers in Sputum from Patients with Cystic Fibrosis}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/18263800 http://www.atsjournals.org/doi/abs/10.1164/rccm.200708-1151OC},
volume = {177},
