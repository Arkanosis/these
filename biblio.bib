pages = {e0170622},
pmid = {28170403},
title = {{Longitudinal assessment of sputum microbiome by sequencing of the 16S rRNA gene in non-cystic fibrosis bronchiectasis patients}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/28170403 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5295668 http://dx.plos.org/10.1371/journal.pone.0170622},
