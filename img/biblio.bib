issn = {16240693},
keywords = {Pseudomonas aeruginosa,Quorum sensing},
title = {{Quorum-sensing chez Pseudomonas aeruginosa: M{\'{e}}canisme mol{\'{e}}culaire, impact clinique, et inhibition}},
